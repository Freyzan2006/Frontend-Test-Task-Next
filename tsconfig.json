{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@ui-kit/*": ["src/common/ui-kit/*"],
      "@app/*": ["src/app/*"],
      "@modules/*": ["src/modules/*"],
      "@features/*": ["src/common/features/*"],
      "@widgets/*": ["src/common/widgets/*"],
      "@hooks/*": ["src/common/hooks/*"],
      "@providers/*": ["src/common/providers/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
